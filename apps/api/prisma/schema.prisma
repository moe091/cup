generator client {
  provider     = "prisma-client"
  output       = "../src/generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}




model User {
  id           String   @id @default(uuid())
  email        String   @unique
  displayName  String
  passwordHash String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  oauthAccounts OAuthAccount[]

  lobbiesCreated Lobby[] @relation("LobbyCreatedBy")

  @@map("user")
}

model OAuthAccount {
  id                String @id @default(uuid())
  provider          String
  providerAccountId String
  userId            String
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt         DateTime @default(now())

  @@unique([provider, providerAccountId])
  @@index([userId])
}


enum LobbyStatus {
  OPEN
  IN_PROGRESS
  ENDED
  EXPIRED
}

model Lobby {
  matchId String @id @default(uuid())

  gameId  String
  status  LobbyStatus @default(OPEN)

  socketUrl  String
  maxPlayers Int @default(4)

  createdByUserId String?
  createdBy User? @relation("LobbyCreatedBy", fields: [createdByUserId], references: [id], onDelete: SetNull)

  meta Json?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  expiresAt DateTime?

  @@index([gameId, status])
  @@index([expiresAt])
  @@map("lobby")
}


model Message {
  id           String @id @default(uuid())
  hello        String

  @@map("message") 
}